{% extends 'admin/layout.html.twig' %}

{# Set vars #}
{% set currentModule = "user" %}

{# Flash messages #}
{% set notifMsg = "" %}
{% set notifType = "" %}

{% set routes = {
	index: 'admin_fleetmanagement_vehicle_category_index',
	new: 'admin_fleetmanagement_vehicle_category_new',
	edit: 'admin_fleetmanagement_vehicle_category_edit',
	show: 'admin_fleetmanagement_vehicle_category_show',
	delete: 'admin_fleetmanagement_vehicle_category_delete'
} %}

{% for type, messages in app.flashes %}
    {% for message in messages %}
		{% set notifMsg = message %}
		{% set notifType = type %}
    {% endfor %}
{% endfor %}


{# Title #}
{% block title %}
    {{ parent() }} - 
    {{ "Nouvel utilisateur"|trans }}
{% endblock title %}

{# Heading #}
{% block layout_header %}
<div class="row mt-3" data-notify="{{ notifMsg }}" data-notify-type="{{ notifType }}">
	<div class="col col-lg-6 offset-lg-3">
	    <nav aria-label="breadcrumb">
	        <ol class="breadcrumb bg-transparent small mb-2 p-0">
	            <li class="breadcrumb-item active" aria-current="page">{{ app.user.username|title }}</li>
	            <li class="breadcrumb-item active" aria-current="page">{{ "Type de véhicule"|trans }}</li>
	            <li class="breadcrumb-item active" aria-current="page">{{ "Nouveau"|trans }}</li>
	        </ol>
	    </nav>

	    <div class="d-flex align-items-center">
			<h1 class="h2 text-light-black">{{ "Nouveau type de véhicule"|trans|title }}</h1>
	    </div>
	</div>
</div>
{% endblock %}

{# Body #}
{% block layout_container %}
	{{ include('admin/fleetmanagement/vehicle_category/_form.html.twig') }}
{% endblock %}