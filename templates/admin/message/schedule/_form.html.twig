{# Set routes #}
{% set routes = {
	index: 'admin_message_schedule'
} %}

<div class="row mt-3">
	<div class="col col-lg-8 offset-lg-2">
			<p class="lead small text-muted mb-3">
				{{ "Utiliser ce formulaire pour ajouter de éléments"|trans }}
			</p>
		<div>
			{{ form_start(form) }}
				{{ form_errors(form) }}

				<div class="row">
					<div class="col-6">
			  			{{ form_row(form.day, {label: "Jour", 
			  				help: "Veuillez indiquer le jour.", 
			  				attr: {class: "border-light-lg", placeholder: "Entrer un jour..."}}) }}
					</div>
					<div class="col-6">
			  			{{ form_row(form.time, {label: "Heure", 
			  				help: "Veuillez indiquer l'heure.", 
			  				attr: {class: "border-light-lg", placeholder: "Entrer l'heure..."}}) }}
					</div>
				</div>

	  			{{ form_row(form.location, {label: "Location", 
	  				help: "Veuillez indiquer la localité.", 
	  				attr: {class: "border-light-lg", placeholder: "Entrer la localité..."}}) }}

		  		<div class="row mt-4">
		  			{% if form.saveAndCreateNew is defined %}
		  				<div class="col-12 col-lg">
		  					<button type="submit" class="btn btn-block btn-dark mb-3">{{ "Sauvegarder"|trans }}</button>
		  				</div>
		  				<div class="col-12 col-lg">
			  				{{ form_widget(form.saveAndCreateNew, 
			  					{label: "Sauvegarder et nouveau", attr: {class: "btn-block btn btn-secondary mb-3"}}) }}
		  				</div>
		  			{% else %}
		  				<div class="col-12 col-lg">
		  					<button type="submit" class="btn btn-block btn-dark mb-3">{{ "Modifier"|trans }}</button>
		  				</div>
		  			{% endif %}
		  			<div class="col-12 col-lg">
		  				<a href="{{ path(routes.index) }}" class="btn btn-block btn-light mb-3">
		  					{{ "Annuler"|trans }}
		  				</a>
		  			</div>
		  		</div>
			{{ form_end(form) }}
		</div>
	</div>
</div>