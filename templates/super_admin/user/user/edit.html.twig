{% extends 'super_admin/layout.html.twig' %}

{# Set vars #}
{% set currentModule = "user" %}

{# Flash messages #}
{% set notifMsg = "" %}
{% set notifType = "" %}

{% for type, messages in app.flashes %}
    {% for message in messages %}
		{% set notifMsg = message %}
		{% set notifType = type %}
    {% endfor %}
{% endfor %}


{# Title #}
{% block title %}
    {{ parent() }} - 
    {{ "Modifier utilisateur"|trans }}
{% endblock title %}

{# Heading #}
{% block layout_header %}
<div class="row mt-3" data-notify="{{ notifMsg }}" data-notify-type="{{ notifType }}">
	<div class="col col-lg-6 offset-lg-3">
	    <nav aria-label="breadcrumb">
	        <ol class="breadcrumb bg-transparent small mb-2 p-0">
	            <li class="breadcrumb-item active" aria-current="page">{{ app.user.username|title }}</li>
	            <li class="breadcrumb-item active" aria-current="page">{{ "Utilisateur"|trans }}</li>
	            <li class="breadcrumb-item active" aria-current="page">{{ "Modifier"|trans }}</li>
	        </ol>
	    </nav>

	    <div class="d-flex align-items-center">
			<h1 class="h2 text-light-black">{{ "Modifier utilisateur"|trans|title }}</h1>
	    </div>
	</div>
</div>
{% endblock %}

{# Body #}
{% block layout_container %}
	{{ include('super_admin/user/user/_form.html.twig') }}
{% endblock %}
