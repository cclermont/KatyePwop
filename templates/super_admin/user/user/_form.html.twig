{# Set routes #}
{% set routes = {
	index: 'super_admin_user'
} %}

<div class="row mt-3">
	<div class="col col-lg-6 offset-lg-3">
			<p class="lead small text-muted mb-3">
				{{ "Utiliser ce formulaire pour ajouter des localités"|trans }}
			</p>
		<div>
			{{ form_start(form) }}
				{{ form_errors(form) }}

	  			{{ form_row(form.username, {label: "Nom utilisateur", 
	  				help: "Veuillez indiquer votre nom utilisateur.", 
	  				attr: {class: "border-light-lg", placeholder: "Entrer le nom utilisateur"}}) }}
	  			{{ form_row(form.email, {label: "Email", 
	  				help: "Veuillez indiquer votre email.", 
	  				attr: {class: "border-light-lg", placeholder: "Entrer l'email"}}) }}
	  			{{ form_row(form.enabled, {label: "Active", 
	  				help: "Veuillez indiquer si l'utilisateur est actif ou pas.", 
	  				label_attr: {class: 'checkbox-custom'}}) }}

		  		<div class="row mt-4">
		  			{% if form.saveAndCreateNew is defined %}
		  				<div class="col-12 col-lg">
		  					<button type="submit" class="btn btn-block btn-dark mb-3">{{ "Creer"|trans }}</button>
		  				</div>
		  				<div class="col-12 col-lg">
			  				{{ form_widget(form.saveAndCreateNew, 
			  					{label: "Créer et nouveau", attr: {class: "btn-block btn btn-secondary mb-3"}}) }}
		  				</div>
		  			{% else %}
		  				<div class="col-12 col-lg">
		  					<button type="submit" class="btn btn-block btn-dark mb-3">{{ "Modifier"|trans }}</button>
		  				</div>
		  			{% endif %}
		  			<div class="col-12 col-lg">
		  				<a href="{{ path(routes.index) }}" class="btn btn-block btn-light mb-3">
		  					{{ "Annuler"|trans }}
		  				</a>
		  			</div>
		  		</div>
			{{ form_end(form) }}
		</div>
	</div>
</div>