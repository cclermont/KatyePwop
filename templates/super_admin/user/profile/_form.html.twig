<div class="row mt-3">
	<div class="col col-lg-8 offset-lg-2">
			<p class="lead small text-muted mb-3">
				{{ "Utiliser ce formulaire pour modifier votre profil"|trans }}
			</p>
		<div>
			{{ form_start(form) }}
				{{ form_errors(form) }}
	  			<div class="row">
	  				<div class="col-12 col-lg-3" data-type="profile-pic-container">
						<p class="text-center">
							<img src="{{ vich_uploader_asset(entity.image, 'file') | imagine_filter('thumb_512x512') }}" 
								alt="{{ "Photo de profil"|trans }}" class="img-thumbnail" data-type="profile-pic">
						</p>
						<span class="btn btn-block btn-primary mt-2 btn-upload" data-type="upload-btn"
								data-label-default="{{ "Ajouter une photo"|trans }}" 
								data-label-selected="{{ "Changer la photo"|trans }}">
							<span>{{ "Ajouter une photo"|trans }}</span>
							{{ form_widget(form.image.file) }}
						</span>
	  				</div>
	  				<div class="col-12 col-lg">
			  			<div class="row">
			  				<div class="col-12 col-lg">
					  			{{ form_row(form.firstname, {label: "Nom", 
					  				help: "Veuillez indiquer votre nom correctement", 
					  				attr: {class: "border-light-lg", placeholder: "Entrer votre nom"}}) }}
			  				</div>
			  				<div class="col-12 col-lg">
			  					{{ form_row(form.lastname, {label: "Prénom", 
					  				help: "Veuillez indiquer votre prénom correctement", 
					  				attr: {class: "border-light-lg", placeholder: "Entrer votre prénom"}}) }}
			  				</div>
			  			</div>
			  			<div class="row">
			  				<div class="col-12 col-lg">
					  			{{ form_row(form.birthdate, {label: "Date de naissance", 
					  				help: "Veuillez indiquer votre date de naissance correctement", 
					  				attr: {class: "border-light-lg"}}) }}
			  				</div>
			  				<div class="col-12 col-lg">
					  			{{ form_row(form.gender, {label: "Sexe", 
					  				help: "Veuillez indiquer votre gender correctement", 
					  				attr: {class: "border-light-lg", placeholder: "Entrer votre sexe"}}) }}
			  				</div>
			  			</div>
				  		<div class="row mt-4">
			  				<div class="col-12 col-lg">
			  					<button type="submit" class="btn btn-block btn-dark mb-3">{{ "Modifier"|trans }}</button>
			  				</div>
				  			<div class="col-12 col-lg">
				  				<a href="{{ path("super_admin_user_show", {id: app.user.id}) }}" 
				  					class="btn btn-block btn-light mb-3">
				  					{{ "Annuler"|trans }}
				  				</a>
				  			</div>
				  		</div>
	  				</div>
	  			</div>
			{{ form_end(form) }}
		</div>
	</div>
</div>