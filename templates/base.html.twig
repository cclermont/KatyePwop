<!DOCTYPE html>
<html prefix="og: http://ogp.me/ns#">
	<head>
        <title>{% block title %}{% endblock title %}</title>
        
        <meta charset="utf-8">
		<meta name="robots" content="noodp,noydir" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
		<meta http-equiv="Content-language" content="{{ app.request.locale }}" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta name="keywords" content="{% block head_keyWords %}{{ 'site.keywords'|trans }}{% endblock head_keyWords %}" />
		<meta name="description" content="{% block head_description %}{{ 'site.description'|trans }}{% endblock head_description %}" />

		<meta property="og:type" content="website" />
		<meta property="og:title" content="{{ 'site.title'|trans|title }}" />
		<meta property="og:description" content="{{ 'site.description'|trans }}" />
		<meta property="og:url" content="{{ absolute_url(app.request.requestUri) }}" />
		<meta property="og:image" content="{{ absolute_url(asset('apple-touch-icon.png')) }}" />
		
		<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
		<link rel="icon" type="image/x-icon" href="{{ asset('favicon.png') }}" />

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/app.css') }}" />
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}

        {% block javascripts %}
            <script src="{{ asset('build/manifest.js') }}"></script>
            <script src="{{ asset('build/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
